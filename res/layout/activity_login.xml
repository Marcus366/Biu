<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.ajaybe.biu.LoginActivity" >

    <EditText
        android:id="@+id/username"
        android:layout_width="72dp"
        android:layout_height="20dp"
        android:layout_below="@+id/banner_gun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/txt_name"
        android:ems="10" />
    
    <EditText
        android:id="@+id/password"
        android:layout_width="246.5dp"
        android:layout_height="30dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/txt_password"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/banner_gun"
        android:layout_width="90dp"
        android:layout_height="137.5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/bnr_gun" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="193dp"
        android:layout_height="64.5dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_login"
        android:onClick="Login" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="64dp"
        android:layout_height="43.5dp"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_register" />

</RelativeLayout>